{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/realty-my-way",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/next:build",
      "outputs": [
        "dist/apps/realty-my-way"
      ],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/realty-my-way",
        "outputPath": "dist/apps/realty-my-way",
        "assets": [
          {
            "input": "libs/shared/assets/src/svgs/",
            "glob": "**/*.svg",
            "output": "assets/svgs"
          },
          {
            "input": "libs/shared/assets/src/images/",
            "glob": "**/*.*",
            "output": "assets/images"
          }
        ]
      },
      "configurations": {
        "development": {
          "outputPath": "apps/realty-my-way"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "realty-my-way:build",
        "dev": true,
        "assets": [
          {
            "input": "libs/shared/assets/src/svgs/",
            "glob": "**/*.svg",
            "output": "assets/svgs"
          },
          {
            "input": "libs/shared/assets/src/images/",
            "glob": "**/*.*",
            "output": "assets/images"
          }
        ]
      },
      "configurations": {
        "development": {
          "buildTarget": "realty-my-way:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "realty-my-way:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "realty-my-way:build:production"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/apps/realty-my-way"
      ],
      "options": {
        "jestConfig": "apps/realty-my-way/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/realty-my-way/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  },
  "tags": [
    "type:app"
  ]
}
